@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dataproduct').DataTable({
                "ordering": false
            });
            var start = 0;
            var nb = 12;
            var end = start + nb;
            var length = $('.img-list .showPromotion').length;
            var list = $('.img-list .showPromotion');

            list.hide().filter(':lt(' + (end) + ')').show();


            $('.prev, .next').click(function (e) {
                e.preventDefault();

                if ($(this).hasClass('prev')) {
                    start -= nb;
                } else {
                    start += nb;
                }

                if (start < 0 || start >= length) start = 0;
                end = start + nb;

                if (start == 0) list.hide().filter(':lt(' + (end) + ')').show();
                else list.hide().filter(':lt(' + (end) + '):gt(' + (start - 1) + ')').show();
            });
        });
    </script>


