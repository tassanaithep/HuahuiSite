@model HuahuiSite.Web.Areas.Backend.Models.SaleViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-8">
        <h4 class="card-title">Sale Management</h4>
        
    </div>

    <div class="col-md-4 text-right">
        <button class="btn btn-info waves-effect waves-light" type="button" data-toggle="modal" data-target="#create-modal"><span class="btn-label"><i class="fa fa-plus"></i></span>Create Sale</button>
    </div>

    <div class="modal fade" id="create-modal" tabindex="-1" role="dialog" aria-labelledby="create-modal-label" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <form id="form-create" asp-controller="Sale" asp-action="Save" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSaveSuccess" enctype="multipart/form-data" >
                    <div class="modal-header">
                        <h4 class="modal-title" id="create-modal-label">Create Sale</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="modal-body">
                                <div>

                                    <div class="form-group row">

                                        <label asp-for="Firstname" class="col-sm-3 text-right control-label col-form-label">Firstname</label>

                                        <div class="col-sm-9">
                                            <input class="form-control" asp-for="Firstname" placeholder="Enter text ...">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="Lastname" class="col-sm-3 text-right control-label col-form-label">Lastname*</label>
                                        <div class="col-sm-9">
                                            <input class="form-control" asp-for="Lastname">
                                        </div>
                                    </div>
                                    <div class="form-group row">

                                        <label asp-for="Address" class="col-sm-3 text-right control-label col-form-label">Address</label>
                                        <div class="col-sm-9">
                                            <textarea class="textarea_editor form-control" rows="5" asp-for="Address"></textarea>
                                        </div>


                                    </div>
                                    <div class="form-group row">

                                        <label asp-for="PhoneNumber" class="col-sm-3 text-right control-label col-form-label">PhoneNumber</label>

                                        <div class="col-sm-9">
                                            <input class="form-control" asp-for="PhoneNumber">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="Email" class="col-sm-3 text-right control-label col-form-label">Email</label>
                                        <div class="col-sm-9">
                                            <input class="form-control" asp-for="Email">
                                        </div>
                                    </div>
                                    <hr />

                                    <span class="text-danger">  <b>กำหนด Username Login</b></span>

                                    <div class="form-group row">

                                        <label asp-for="Username" class="col-sm-3 text-right control-label col-form-label">Username</label>

                                        <div class="col-sm-9">
                                            <input class="form-control" asp-for="Username" placeholder="">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="Password" class="col-sm-3 text-right control-label col-form-label">Password</label>
                                        <div class="col-sm-9">
                                            <input class="form-control" asp-for="Password" type="password">
                                        </div>
                                    </div>
                                </div>
                                                          
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Success</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="parent-table">
    <partial name="_Table" model="Model" />
</div>

@section Scripts {

    <script src="~/js/backend/sale.js"></script>

}

