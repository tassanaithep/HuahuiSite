@model HuahuiSite.Web.Areas.Backend.Models.UserViewModel

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="card-actions">
                <a class="btn-minimize" data-action="expand"><i class="mdi mdi-arrow-expand"></i></a>
            </div>
        </div>
        <div class="card-body collapse show">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Username</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>

                        @{ int No = 1; }

                        @foreach (var item in Model.UserList)
                        {

                            string modalId = "modal-row-table-" + No;

                            <tr>
                                <td>@No</td>
                                <td>@item.Name</td>
                                <td>@item.Username</td>
                                <td>
                                    <a href="#" data-toggle="modal" data-target="#@modalId"> <i class="fas fa-pencil-alt text-inverse m-r-10"></i> </a>
                                    <div class="modal fade" id="@modalId" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                <form class="form-row-table" asp-controller="User" asp-action="Update" data-ajax="true" data-ajax-method="post" data-ajax-success="OnUpdateSuccess" enctype="multipart/form-data">
                                                    
                                                    <!-- Hidden Value -->
                                                    <input type="hidden" name="Id" value="@item.Id" />
                                                    <!-- End Hidden Value -->

                                                    <div class="modal-header" style="background-color:#ff6a00;">
                                                        <h4 class="modal-title text-white" >Edit Admin</h4>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" class="text-white">×</span></button>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                                            <div class="modal-body">
                                                                <div class="form-group">
                                                                    <label class="control-label">Name</label>
                                                                    <input type="text" class="form-control" name="Name" value="@item.Name">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label class="control-label">Username</label>
                                                                    <input type="text" class="form-control" name="Username" value="@item.Username">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label class="control-label">Password</label>
                                                                    <input type="password" class="form-control" name="Password" value="@item.Password">
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                        <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Success</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <a href="#" onclick="Delete(this)"><i class="fas fa-trash-alt text-inverse m-r-10"></i></a>
                                </td>
                            </tr>

                            No++;

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>