@model HuahuiSite.Web.Areas.Backend.Models.ProductViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-8">
        <h4 class="card-title">Product Management</h4>
        <h6 class="card-subtitle m-b-20 text-muted">You can make product like this</h6>
    </div>
    <div class="col-md-4 text-right">
        <button class="btn btn-info waves-effect waves-light" type="button" data-toggle="modal" data-target="#create-modal"><span class="btn-label"><i class="fa fa-plus"></i></span>Create Product</button>
    </div>
    <div class="modal fade" id="create-modal" tabindex="-1" role="dialog" aria-labelledby="create-modal-label" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <form id="form-create" asp-controller="Product" asp-action="Save" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSaveSuccess" enctype="multipart/form-data">
                    <div class="modal-header">
                        <h4 class="modal-title" id="create-modal-label">Add Product</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="modal-body">
                                <div class="form-group">
                                    <label asp-for="Code" class="control-label">Code</label>
                                    <input class="form-control" asp-for="Code" placeholder="Enter text ...">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label">Name</label>
                                    <input class="form-control" asp-for="Name" placeholder="Enter text ...">
                                </div>
                                <div class="form-group">
                                    <label asp-for="UnitId" class="control-label">Unit</label>
                                    <select class="form-control" asp-for="UnitId">
                                        <option value="">--- Please Select Item ---</option>
                                        <option value="1">Bath</option>
                                        <option value="2">Dolla</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ProductCategorieCode" class="control-label">Categorie</label>
                                    <select class="form-control" asp-for="ProductCategorieCode">
                                        <option value="">--- Please Select Item ---</option>
                                        <option value="1">Categorie 1</option>
                                        <option value="2">Categorie 2</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ProductGroupCode" class="control-label">Group</label>
                                    <select class="form-control" asp-for="ProductGroupCode">
                                        <option value="">--- Please Select Item ---</option>
                                        <option value="1">ProductGroupCode 1</option>
                                        <option value="2">ProductGroupCode 2</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input type="checkbox" asp-for="IsLicense" class="check">
                                    <label asp-for="IsLicense" class="control-label">License</label>
                                </div>
                                <div class="form-group">
                                    <input type="checkbox" asp-for="IsPromotion" class="check">
                                    <label asp-for="IsPromotion" class="control-label">Promotion</label>
                                </div>
                                @*<div class="form-group">
            <label asp-for="DescriptionTh" class="control-label">Description</label>
            <div class="form-group">
                <textarea class="textarea_editor form-control" rows="5" placeholder="Enter text ..." asp-for="DescriptionTh"></textarea>
            </div>
        </div>*@
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-12">
                        <div class="form-group" id="parent-form-group-title-picture">
                            <label asp-for="TitlePictureImageFile" class="control-label">Picture Upload</label>
                            <input class="dropify" asp-for="TitlePictureImageFile" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Success</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="parent-table">
    <partial name="_Table" model="Model" />
</div>

@section Scripts {

    <script src="~/js/backend/product.js"></script>

}

